{{#if success}}
  <div class="d-flex justify-content-center">
    <div class="alert alert-info alert-dismissible fade show text-center mx-auto"
      style="position: fixed; z-index:3; top: 4rem" role="alert">
      {{success}}
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  </div>
  <script>
    setTimeout(() => document.querySelector('.btn-close').click(), 3000);
  </script>
{{/if}}

